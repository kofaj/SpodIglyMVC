@model SpodIglyMVC.ViewModels.HomeViewModel
@using SpodIglyMVC.Infrastructure

@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
    ViewBag.Title = "Index";
}


<nav class="genres-horizontal">
    <ul>
        @foreach (var genre in Model.Genres)
        {
            <li>
                <a href="@Url.Action("List", "Store", new { genrename = genre.Name.ToLower() })" style="background-image: url(@Url.GenreIconPath(genre.IconFilename)); ">
                    @genre.Name
                </a>
            </li>
        }
    </ul>
    <a href="">
        <img id="baner-main" src="../Content/Images/baner-main.png" />
    </a>
</nav>

<section>
    <ul class="ThreeColumnsCoversList large-cover-list">
        @foreach (var newArrival in Model.NewArrivals)
        {
            <li>
                <article>
                    <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = newArrival.AlbumId })">
                        <img src="../Content/Images/cart.png" />
                    </a>
                    <a class="productdetailslink" href="@Url.Action("Details", "Store", new { id = newArrival.AlbumId })">
                        <div class="newFlag"></div>
                        <img class="album-cover" src="@Url.CoverIconFile(newArrival.CoverFileName)" />
                        <h1>
                            @newArrival.ArtistName - @newArrival.AlbumTitle
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>

<section>
    <ul class="ThreeColumnsCoversList large-cover-list">
        @foreach (var best in Model.Bestsellers)
        {
            <li>
                <article>
                    <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = best.AlbumId })">
                        <img src="../Content/Images/cart.png" />
                    </a>
                    <a class="productdetailslink" href="@Url.Action("Details", "Store", new { id = best.AlbumId })">
                        <div class="bestsellerFlag"></div>
                        <img class="album-cover" src="@Url.CoverIconFile(best.CoverFileName)" />
                        <h1>
                            @best.ArtistName - @best.AlbumTitle
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>
